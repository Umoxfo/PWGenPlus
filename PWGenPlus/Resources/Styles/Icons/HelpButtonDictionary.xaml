<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HelpButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Template" Value="{StaticResource IconButtonControlTemplate}"/>
        <Setter Property="ToolTip" Value="Quick Help"/>
        <Setter Property="Content" Value="{StaticResource HelpDrawingImage}"/>
    </Style>
</ResourceDictionary>